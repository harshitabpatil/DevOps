pipeline {
    agent any
    environment {
        TARGET_SERVER = 'ubuntu@3.237.2.239' // Update with the EC2 user and IP
        FRONTEND_DIR = '/home/ubuntu/DevOps/KTMC_Website_Frontend-dev-server' // Target folder for Frontend on EC2 machine
        FRONTEND_SERVICE_NAME = 'KTMC_Website_Frontend' // PM2 service name for Frontend
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm // Checkout code for Frontend
            }
        }
        stage('Deploy Frontend to EC2') {
            steps {
                script {
                    // SCP Frontend code to EC2
                    sh """
                    scp -r ./* ${TARGET_SERVER}:${FRONTEND_DIR}/
                    """
                    // SSH into the EC2 instance for Frontend deployment
                    sh """
                    ssh ${TARGET_SERVER} << EOF
                    set -e  # Stop execution if any command fails
cd ${FRONTEND_DIR}
rm -rf node_modules package-lock.json
npm install express@4 --legacy-peer-deps
npm install --legacy-peer-deps
npm run build
pm2 restart ${FRONTEND_SERVICE_NAME} || pm2 start server.js --name "${FRONTEND_SERVICE_NAME}"
EOF
                    """
                }
            }
        }
    }
    post {
        success {
            echo 'Frontend Deployed and Service Restarted Successfully!'
        }
        failure {
            echo 'Frontend Deployment Failed. Please check logs for details.'
        }
    }
}
